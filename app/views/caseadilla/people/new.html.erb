<h2>Add a new person</h2>

<%= simple_form_for @person, :url => caseadilla_people_path do |f| %>
	
	<%= render :partial => 'caseadilla/people/form', :locals => { :f => f } %>
	
	<p class="submits">
		<%= link_to 'Cancel', caseadilla_people_path, :class => 'btn btn-mini btn-danger' %>
		<%= f.submit "Add new person", :class => "btn btn-mini btn-primary" %>
	</p>

<% end %>

<%= content_for :sidebar do %>
	<li><%= link_to "#{caseadilla_show_icon "th-list"}Back to list".html_safe, caseadilla_people_path %></li>
<% end %>