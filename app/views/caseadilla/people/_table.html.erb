<!-- Scaffolding generated by Caseadilla 0.0.6 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= caseadilla_sort_link "Name", :name %></th>
			<th><%= caseadilla_sort_link "Email", :email %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% people.each do |person| %>
		<tr>
			<td><%= caseadilla_table_cell_link person.name, caseadilla_person_path(person) %></td>
			<td><%= caseadilla_table_cell_link person.email, caseadilla_person_path(person) %></td>
			<td class="delete">
				<%= link_to(caseadilla_show_row_icon("trash"), caseadilla_person_path(person), :method => :delete, :data => { :confirm => "Are you sure you want to delete this person?" }) %>
			</td>
		</tr>
	<% end %>
</table>