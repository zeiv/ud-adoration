<!-- Scaffolding generated by Caseadilla 0.0.6 -->
<%= @time_slot.inspect %><br>
<%= params.inspect %>

<div class="row">
	<div class="col-sm-6">
		<%= caseadilla_text_field f, f.object, :name %>
	</div>
	<div class="col-sm-6">
		<%= caseadilla_text_field f, f.object, :email %>
	</div>
</div>

<div class="row">
  <div class="col-sm-6">
    <label class="control-label" for="time_slots">Time Slots</label>
    <div class='well'>
      <%= f.simple_fields_for :time_slots do |ff| %>
          <div class='duplicatable-nested-form form-group'>
            <%= ff.select :day, Date::DAYNAMES.dup, class: 'input-lg' %>
            <%= ff.time_select :time, ampm: true, minute_interval: 15, class: 'input-lg' %>
            <% if ff.object.new_record? %>
              <%= link_to "#{caseadilla_show_icon "trash"}".html_safe, '', :remote => true, :class => 'destroy-duplicate-nested-form' %>
            <% else %>
              <%= link_to "#{caseadilla_show_icon "trash"}".html_safe, time_slot_path(ff.object), :method => :delete, :remote => true, :class => 'destroy-duplicate-nested-form' %>
              <%= ff.input :id, as: :hidden %>
            <% end %>
          </div>
      <% end %>
      <%= link_to 'Add Time Slot', '', :class => 'btn btn-default add-nested-form-item' %>
    </div>
  </div>
  <div class="col-sm-6">
    <%= caseadilla_collection_check_boxes f, f.object, :reminder_ids, Reminder.all, :id, :hours_before, class: 'hours_before caseadilla-check-boxes', caseadilla_label: 'Reminders' %>
  </div>
</div>
