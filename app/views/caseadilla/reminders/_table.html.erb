<!-- Scaffolding generated by Caseadilla 0.0.6 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= caseadilla_sort_link "Hours before", :hours_before %></th>
			<th><%= caseadilla_sort_link "Message", :message %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% reminders.each do |reminder| %>
		<tr>
			<td><%= caseadilla_table_cell_link reminder.hours_before, caseadilla_reminder_path(reminder) %></td>
			<td><%= caseadilla_table_cell_link reminder.message, caseadilla_reminder_path(reminder) %></td>
			<td class="delete">
				<%= link_to(caseadilla_show_row_icon("trash"), caseadilla_reminder_path(reminder), :method => :delete, :data => { :confirm => "Are you sure you want to delete this reminder?" }) %>
			</td>
		</tr>
	<% end %>
</table>