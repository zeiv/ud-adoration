<h2>View reminder</h2>

<%= form_for @reminder, :url => caseadilla_reminder_path(@reminder) do |f| %>

	<%= render :partial => 'caseadilla/reminders/form', :locals => { :f => f } %>
	
	<p class="submits">
	  	<%= link_to 'Cancel', caseadilla_reminders_path, :class => 'btn btn-mini btn-danger' %>
		<%= f.submit "Save changes", :class => "btn btn-mini btn-primary" %>
	</p>

<% end %>

<%= content_for :sidebar do %>
	<li><%= link_to "#{caseadilla_show_icon "th-list"}Back to list".html_safe, caseadilla_reminders_path %></li>
<% end %>